			<ImageView id="dropdown" image="region-select-dropdown.png" top="135" height="42"/>
			<Label top="142" id="region">Please select region</Label>

			<ImageView id="button" image="view-business-button.png" bottom="20" height="42"/>
			<Label bottom="32">View Business Listing</Label>
			
			<Picker id="picker" selectionIndicator="true" useSpinner="true" visible="false" bottom="0">
